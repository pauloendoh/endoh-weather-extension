{
  "manifest_version": 3,
  "name": "My Timer Extension",
  "description": "Develop by endoh.io",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icon.webp",
      "48": "icon.webp",
      "128": "icon.webp"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "webRequest",
    "webNavigation",

    "contextMenus",
    "offscreen"
  ],
  "icons": {
    "16": "icon.webp",
    "48": "icon.webp",
    "128": "icon.webp"
  },

  "host_permissions": ["<all_urls>"]
}
